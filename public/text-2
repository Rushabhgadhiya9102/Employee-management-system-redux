    <script>
        document.querySelectorAll('.mark-done-btn').forEach(button => {
            button.addEventListener('click', function() {
                const taskItem = this.closest('.task-item');
                taskItem.classList.add('opacity-60');
                this.classList.add('cursor-default');
                this.innerHTML = 'Completed <i class="fas fa-check text-xs"></i>';
                this.disabled = true;
            });
        });
